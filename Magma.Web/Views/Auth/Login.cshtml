
@{
    ViewBag.Title = "Login";
}

    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <form method="POST" id="signup-form" class="signup-form">
                    @Html.AntiForgeryToken();
                    <h2 class="form-title">Login to your account</h2>
                    <div class="form-group">
                        <input type="email" class="form-input" name="loginemail" id="loginemail" placeholder="Your Email" />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-input" name="loginpass" id="loginpass" placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" id="submit" class="form-submit" value="Login" />
                    </div>
                </form>
                <p class="loginhere">
                    Don't have an account ? <a href="~/Auth/Register" class="loginhere-link">Register here</a>
                </p>
            </div>
        </div>
    </section>

